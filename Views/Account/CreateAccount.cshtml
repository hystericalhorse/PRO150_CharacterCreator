@model Accounts

<h4>@TempData["Success"]</h4>
<form asp-controller="Account" asp-action="CreateAccount" method="post">
	<div class="p-3 mt-4">
		<div class="row pb-2 text-center">
			<h1 class="text-secondary">Create Account</h1>
			<hr />
			<div asp-validation-summary="All" class="text-danger"></div>
		</div>
		<div class="mb-3 text-center">
			<h3><b><label asp-for="Username"></label></b></h3>
			<input asp-for="Username" class="form-control m-auto" style="width: 400px;"/>
			<span asp-validation-for="Username" class="text-danger"></span>
			<hr/>
		</div>
		<div class="mb-3 text-center">
			<h3><b><label asp-for="Password"></label></b></h3>
			<input asp-for="Password" class="form-control m-auto" style="width: 400px;"/>
			<span asp-validation-for="Password" class="text-danger"></span>
			<hr/>
		</div>
		<div class="text-center"><button type="submit" class="btn btn-primary" fdprocessedid="vccu1">Create Account</button></div>
	</div>
</form>