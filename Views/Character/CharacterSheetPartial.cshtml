@model Character

@if (Model != null)
{
<div class="container-fluid mt-2">
	<div class="row">
		<p class="display-3">@Model.Name</p><p class="ms-2 fs-5">@Model.Age</p><p class="ms-1 fs-5">@Model.Gender</p>
	</div>
	<div class="row">
		<ul class="list-group list-group-flush">
				@if (Model.brawnAtt.Score != AttributeObject.AttributeScore.NEUTRAL) {<li class="list-group-item text-success">@Model.brawnAtt.Score.ToString()</li>}
				else if (Model.brawnAtt.Score == AttributeObject.AttributeScore.STRONG) {<li class="list-group-item text-danger">@Model.brawnAtt.Score.ToString()</li>}
				else {<li class="list-group-item">@Model.brawnAtt.Score.ToString()</li>}
		</ul>
	</div>
</div>

	<div class="container px-4 text-center">
		<div class="row gx-5">
			<div class="col">
				<div class="p-3">
					
				</div>
			</div>
			<div class="col">
				<div class="p-3">
					Choose some skills!
				</div>
			</div>
			<div class="col">
				<div class="p-3">
					
				</div>
			</div>
		</div>
	</div>

	<div class="container text-center">
		<div class="container text-center">
			<div class="row">
				<div class="col">
					<input />
				</div>
				<div class="col">
					<input />
				</div>
				<div class="col">
					<input />
				</div>
			</div>
		</div>
	</div>

	<div class="dropdown">
		<button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
			Dropdown button
		</button>
		<ul class="dropdown-menu">
			<li><a class="dropdown-item" href="#">Quality Example 1</a></li>
			<li><a class="dropdown-item" href="#">Quality Example 2</a></li>
			<li><a class="dropdown-item" href="#">Quality Example 3</a></li>
		</ul>
	</div>
}
else
{
<div class="container-fluid mt-2 text-center">
	<p class="h3">That's weird. There doesn't seem to be anything here!</p>
</div>
}