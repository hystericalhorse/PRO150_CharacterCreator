@model Character

<div class="container mt-2 text-center">
	<form method="post">
		<p class="h4">Select A Strong Attribute</p>
		<div class="btn-group" role="group" aria-label="Select a strong attribute.">
			<input type="radio" class="btn-check" name="btnradio0" autocomplete="off" id="bra0" value="Brawn" @TempData["sb1"]>
			<label class="btn btn-outline-success" for="bra0">Brawn</label>
			<input type="radio" class="btn-check" name="btnradio0" autocomplete="off" id="agi0" value="Finesse" @TempData["sf1"]>
			<label class="btn btn-outline-success" for="agi0">Finesse</label>
			<input type="radio" class="btn-check" name="btnradio0" autocomplete="off" id="tou0" value="Toughness" @TempData["st1"]>
			<label class="btn btn-outline-success" for="tou0">Toughness</label>
			<input type="radio" class="btn-check" name="btnradio0" autocomplete="off" id="int0" value="Intellect" @TempData["si1"]>
			<label class="btn btn-outline-success" for="int0">Intellect</label>
			<input type="radio" class="btn-check" name="btnradio0" autocomplete="off" id="per0" value="Personality" @TempData["sp1"]>
			<label class="btn btn-outline-success" for="per0">Personality</label>
			<input type="radio" class="btn-check" name="btnradio0" autocomplete="off" id="acu0" value="Acuity"> @TempData["sa1"]
			<label class="btn btn-outline-success" for="acu0">Acuity</label>
		</div>
		<p class="h4">Select A Strong Attribute</p>
		<div class="btn-group" role="group" aria-label="Select a strong attribute.">
			<input type="radio" class="btn-check" name="btnradio1" autocomplete="off" id="bra1" value="Brawn" @TempData["sb2"]>
			<label class="btn btn-outline-success" for="bra1">Brawn</label>
			<input type="radio" class="btn-check" name="btnradio1" autocomplete="off" id="agi1" value="Finesse" @TempData["sf2"]>
			<label class="btn btn-outline-success" for="agi1">Finesse</label>
			<input type="radio" class="btn-check" name="btnradio1" autocomplete="off" id="tou1" value="Toughness" @TempData["st2"]>
			<label class="btn btn-outline-success" for="tou1">Toughness</label>
			<input type="radio" class="btn-check" name="btnradio1" autocomplete="off" id="int1" value="Intellect" @TempData["si2"]>
			<label class="btn btn-outline-success" for="int1">Intellect</label>
			<input type="radio" class="btn-check" name="btnradio1" autocomplete="off" id="per1" value="Personality"> @TempData["sp2"]
			<label class="btn btn-outline-success" for="per1">Personality</label>
			<input type="radio" class="btn-check" name="btnradio1" autocomplete="off" id="acu1" value="Acuity" @TempData["sa2"]>
			<label class="btn btn-outline-success" for="acu1">Acuity</label>
		</div>
		<p class="h4">Select A Weak Attribute</p>
		<div class="btn-group" role="group" aria-label="Select a weak attribute.">
			<input type="radio" class="btn-check" name="btnradio2" autocomplete="off" id="bra2" value="Brawn" @TempData["wb1"]>
			<label class="btn btn-outline-warning" for="bra2">Brawn</label>
			<input type="radio" class="btn-check" name="btnradio2" autocomplete="off" id="agi2" value="Finesse" @TempData["wf1"]>
			<label class="btn btn-outline-warning" for="agi2">Finesse</label>
			<input type="radio" class="btn-check" name="btnradio2" autocomplete="off" id="tou2" value="Toughness" @TempData["wt1"]>
			<label class="btn btn-outline-warning" for="tou2">Toughness</label>
			<input type="radio" class="btn-check" name="btnradio2" autocomplete="off" id="int2" value="Intellect" @TempData["wi1"]>
			<label class="btn btn-outline-warning" for="int2">Intellect</label>
			<input type="radio" class="btn-check" name="btnradio2" autocomplete="off" id="per2" value="Personality" @TempData["wp1"]>
			<label class="btn btn-outline-warning" for="per2">Personality</label>
			<input type="radio" class="btn-check" name="btnradio2" autocomplete="off" id="acu2" value="Acuity" @TempData["wa1"]>
			<label class="btn btn-outline-warning" for="acu2">Acuity</label>
		</div>
		<br/>
		<button class="mt-2 btn btn-primary" asp-area="" asp-controller="Character" asp-action="EditAttributes">Next</button>
	</form>
	
	<p class="text-danger">@TempData["ErrorDisplay"]</p>
</div>